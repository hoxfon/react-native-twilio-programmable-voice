<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10pt"
        android:layout_marginTop="20pt"
        android:gravity="center_horizontal"
        android:text="LLAMADA DE VOZ DE KEENVIL"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="8pt"
        />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10pt"
        android:layout_marginTop="20pt"
        android:gravity="center_horizontal"
        android:text="Tienes una visita!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14pt"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="bottom|center"
      android:orientation="vertical"
      android:paddingBottom="20pt"
      >
    <Button
        android:id="@+id/allow_visitor_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5pt"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:background="@color/white"
        android:text="1. Permitir el ingreso"
        android:textColor="@color/iris"
        />
    <Button
        android:id="@+id/reject_visitor_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="2. Rechazar el ingreso"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        />
  </LinearLayout>
</RelativeLayout>